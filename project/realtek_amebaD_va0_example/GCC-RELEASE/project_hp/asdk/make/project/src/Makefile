
include $(MAKE_INCLUDE_GEN)

.PHONY: all clean

#*****************************************************************************#
#                               VARIABLES	                              #
#*****************************************************************************#

#*****************************************************************************#
#                        RULES TO GENERATE TARGETS                            #
#*****************************************************************************#
all:
	@make -C $(SRCDIR) all
	@if [ "$(COMPILEOS)" != "$(DARWIN_OS)" ]; then \
		find $(SRCDIR) -type f -regex '.*\(\.i\|\.d\|\.s\|\.su\|\.o\)' |xargs -i mv {} ./; \
	else \
		find $(SRCDIR) -type f -regex '.*\(\.i\|\.d\|\.s\|\.su\|\.o\)' |xargs -I mv {} ./; \
	fi

#*****************************************************************************#
#                        RULES TO CLEAN TARGETS                               #
#*****************************************************************************#
clean: CLEAN_OBJS
	$(REMOVE) *.o
	$(REMOVE) *.i
	$(REMOVE) *.s
	$(REMOVE) *.d
	$(REMOVE) *.su

-include $(DEPS)
