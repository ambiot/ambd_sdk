
include $(MAKE_INCLUDE_GEN)


.PHONY: all clean

#*****************************************************************************#
#                               VARIABLES	                              #
#*****************************************************************************#
DIR = $(BASEDIR)/component/common/ui/emwin/Sample/rtl8721d
	
vpath %.c $(DIR)/Config $(DIR)/hal

#*****************************************************************************#
#                               Source FILE LIST                              #
#*****************************************************************************#
CSRC = $(DIR)/Config/GUIConf.c \
	$(DIR)/hal/hal_touch.c \
	$(DIR)/hal/gt911.c \
	$(DIR)/hal/hal_rgb_lcd.c \
	$(DIR)/Config/LCDConf_RGB_6bit_eval.c \
#	$(DIR)/hal/ft6236.c \
#	$(DIR)/hal/hal_mcu_lcd.c \
#	$(DIR)/Config/LCDConf_MCU_8bit_eval.c \
#	$(DIR)/hal/hal_spi_lcd.c \
#	$(DIR)/Config/LCDConf_SPI_eval.c \



#*****************************************************************************#
#                               Object FILE LIST                              #
#*****************************************************************************#
OBJS = $(notdir $(CSRC:.c=.o))

#*****************************************************************************#
#                               Include Dependency                            #
#*****************************************************************************#
-include $(OBJS:.o=.d)

#*****************************************************************************#
#                        RULES TO GENERATE TARGETS                            #
#*****************************************************************************#
all: CORE_TARGETS COPY_RAM_OBJS

#*****************************************************************************#
#              GENERATE OBJECT FILE 
#*****************************************************************************#
CORE_TARGETS: $(OBJS)

#*****************************************************************************#
#              CLEAN GENERATED FILES                                          #
#*****************************************************************************#
clean: CLEAN_OBJS 
	$(REMOVE) *.o
	$(REMOVE) *.i
	$(REMOVE) *.s
	$(REMOVE) *.d
	$(REMOVE) *.su

-include $(DEPS)
